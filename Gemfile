source 'https://rubygems.org'

gem 'httparty', '~> 0.21.0'  # For making HTTP requests to Todoist API
gem 'dotenv', '~> 2.8', '>= 2.8.1'  # For loading environment variables
gem 'json', '~> 2.6', '>= 2.6.3'  # For parsing JSON responses
gem 'openai', '~> 0.9.0'  # For interacting with OpenAI's API

group :development, :test do
  gem 'rspec', '~> 3.12'  # Testing framework
  gem 'webmock', '~> 3.18', '>= 3.18.1'  # For mocking HTTP requests in tests
  gem 'pry', '~> 0.14.2'  # For debugging
end
